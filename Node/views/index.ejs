<!DOCTYPE html>
<html lang="en">

	<head>
		<% include partials/head.ejs %>
	</head>

  <body>

    <iframe style="display:none" id="video" src="//www.youtube.com/embed/e-ORhEE9VVg?enablejsapi=1&html5=1" frameborder="0" allowfullscreen></iframe>

    <div id='main-holder'>

      <section>

        <h1>LEILA <span id='version'></span><span id='time'></span></h1>

        <span id="coding-holder">
          <p>
            <div class="btn-group btn-group-sm" role="group" aria-label="...">
              <button type="button" class="btn btn-default" onclick="sendCode()">Send code</button>
              <select id="samples" class="selectpicker" data-style="btn btn-sm btn-default"></select>
              <button type="button" class="btn btn-default" onclick="editor.insert(JSON.stringify(getServoAngles()))">Frame</button>
              <button type="button" class="btn btn-default" onclick="socket.emit('eval', 'hex.Motion.init()');">Init</button>
            </div>
          </p>
          <div id="editor-holder">
            <div id="editor"></div>
          </div>
        </span>

      </section>

      <section>

        <div id="log-table-holder">

          <table id="log-table" class="table table-bordered">
            <thead>
              <tr>
                <th class="number">#</th>
                <th class="time">Time</th>
                <th class="from">From</th>
                <th class="tag">Tag</th>
                <th char="message">Message</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>

        </div>

      </section>

      <section>
    
        <div id='threejs' class="preview"></div>

      </section>

      <section>
        <div class="jumbotron">
          <div class="container">                        
            <h1 class="brand-heading">LEILA</h1>
              <p class="intro-text">Denis Isidoro<br>Omar Darwiche<br>Victor Barros<br>Lucas Carvalho</p><br>
              <p><a class="btn btn-default" href="http://github.com/denisidoro/leila" target="_blank" role="button">View source code</a></p>
          </div>
        </div>
      </section>

    </div>

    <div id='gui'></div>

  	<% include partials/jsdefaults.ejs %>

	</body>

</html>